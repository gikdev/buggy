<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Buggy Dashboard</title>

  <!-- Bootstrap CSS -->
  <link
    rel="stylesheet"
    crossorigin="anonymous"
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css"
    integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB"
  />

  <style>
    pre {
      background-color: #f8f9fa;
      padding: 0.5rem;
      border-radius: 0.25rem;
      overflow-x: auto;
    }
  </style>
</head>
<body class="bg-light">

  <div class="container py-5">
    <h1 class="mb-4">Buggy Dashboard</h1>

    <button 
      class="btn btn-primary"
      onclick="{
        const btns = document.querySelectorAll('.accordion-button');
        btns.forEach(b => b.click());
      }"
    >Expand/Close All</button>

    <div class="accordion" id="bugsAccordion">

      {{#if bugs.length}}
        {{#each bugs}}
          <div class="accordion-item">
            <h2 class="accordion-header" id="heading-{{id}}">
              <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-{{id}}" aria-expanded="false" aria-controls="collapse-{{id}}">
                <span class="me-2">{{title}} </span>
                <span class="badge bg-{{priorityClass priority}}">{{priority}}</span>
              </button>
            </h2>

            <div id="collapse-{{id}}" class="accordion-collapse collapse" aria-labelledby="heading-{{id}}" data-bs-parent="#bugsAccordion">
              <div class="accordion-body">
                <p>
                  <strong>Status:</strong>
                  <span>{{status}}</span>
                </p>

                <p>
                  <strong>Reported By:</strong> 
                  <span>{{reportedBy}}</span>
                </p>

                <p>
                  <strong>Description:</strong> 

                  {{#if description}}
                    <span>{{description}}</span>
                  {{else}}
                    <span>(No description)</span>
                  {{/if}}
                </p>

                <p>
                  <strong>Stack Trace:</strong>

                  {{#if stack}}
                    <pre>{{stack}}</pre>
                  {{else}}
                    <span>(No stack)</span>
                  {{/if}}
                </p>

                <p>
                  <strong>Attachment:</strong>

                  {{#if attachmentUrl}}
                    <a href="{{attachmentUrl}}" target="_blank">View</a>
                  {{else}}
                    <span>(No attachment)</span>
                  {{/if}}
                </p>
                <p>
                  <strong>Created At:</strong>
                  <span>{{createdAt}}</span>
                </p>
                <p>
                  <strong>Updated At:</strong> 
                  <span>{{updatedAt}}</span>
                </p>
              </div>
            </div>
          </div>
        {{/each}}
      {{else}}
        <p>No bugs here! Hoooray! ðŸ¥³</p>
      {{/if}}
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script 
    crossorigin="anonymous"
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI"
  ></script>
</body>
</html>
